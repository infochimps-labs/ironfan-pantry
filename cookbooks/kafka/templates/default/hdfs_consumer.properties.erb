# This file auto-generated by Chef

# kafka topic to read from
kafka.etl.topic=<%= @topic %>

# jars for kafka-contrib/hadoop-consumer are placed here
hdfs.default.classpath.dir=hdfs://<%= File.join(@hadoop_hdfs_host,@hashed_options[:classpath_dir]) %>

# number of test events to be generated
event.count=0

# hadoop id and group
hadoop.job.ugi=kafka,hadoop

# kafka server uri
kafka.server.uri=tcp://${BROKER}

# hdfs location of input directory 
input=hdfs://<%= File.join(@hadoop_hdfs_host, @hashed_options[:input_dir]) %>

# hdfs location of output directory
output=hdfs://<%= File.join(@hadoop_hdfs_host, @hashed_options[:output_dir]) %>

# limit the number of events to be fetched;
# value -1 means no limitation
kafka.request.limit=-1

# kafka parameters
client.buffer.size=1048576
client.so.timeout=60000
